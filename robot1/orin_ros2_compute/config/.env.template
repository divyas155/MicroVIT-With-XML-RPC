# Robot1 AI Service Configuration - REALTIME MODE
# Copy this to ~/robot1_ai_package/.env when using realtime mode

# Robot Configuration
ROBOT_ID=jetson1

# Nano Connection (for camera/LiDAR/odom via XML-RPC)
NANO_IP=10.13.68.184
NANO_PORT=8000

# Ollama AI Configuration (use tiny model to avoid GPU OOM)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5:0.5b

# MicroViT Configuration (for fast image preprocessing - ~9ms on GPU)
# Set USE_MICROVIT=true to enable MicroViT preprocessing
USE_MICROVIT=true
MICROVIT_MODEL_NAME=apple/mobilevit-small
MICROVIT_VARIANT=S1
MICROVIT_USE_CPU=false  # Use GPU on Orin for best performance

# VIT Model Configuration (for vision analysis - fallback)
VIT_MODEL_NAME=Salesforce/blip-image-captioning-base
VIT_USE_CPU=true

# Ollama Text Generation Parameters
OLLAMA_TEXT_MODEL=qwen2.5:0.5b
OLLAMA_MAX_TOKENS=500
OLLAMA_CONTEXT_LENGTH=512
OLLAMA_TIMEOUT=120

# MQTT Configuration (Controller MQTT broker)
MQTT_BROKER_HOST=10.13.68.48
MQTT_BROKER_PORT=1883
